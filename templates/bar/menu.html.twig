{% include 'components/btn-modal-add-item.html.twig' %}
{% include('components/btn-modal-create-discount.html.twig') %}

<ul class="list-group">
    {% for item_category in products %}
        {% for item in item_category %}
            <li class="list-group-item">
                <div class="float-md-left">
                    <b class="js-itemName">{{ item.name }}</b> <span class="js-itemPrice">{{ item.price }}</span>
                </div>
                <div class="float-md-right">
                    <button type="button" class="btn btn-success">Modifier</button>
                    <button type="button" class="btn btn-danger">Supprimer</button>
                    {% include('components/btn-modal-apply-discount.html.twig') %}
                </div>
            </li>
        {% endfor %}
    {% endfor %}
</ul>

{% block modalAddItem %}{% endblock %}
{% block modalCreateDiscount %}{% endblock %}
{% block modalApplyDiscount %}{% endblock %}
